{
	"version": "0.1.0",
	"command": "${workspaceRoot}/node_modules/.bin/webpack",
	"isShellCommand": true,
	"args": [
		"--colors"
	],
	"echoCommand": true,
	"tasks": [
		{
			"args": [
				"-d" 
			],
			"suppressTaskName": true,
			"taskName": "webpack dev",
			"isBuildCommand": true
		},
        {
			"args": [
				"-d",
                "--watch"
			],
			"suppressTaskName": true,
			"taskName": "webpack dev watch",
			"isBuildCommand": true
		},
		{
			"args": [
				"-p"
			],
			"suppressTaskName": true,
			"taskName": "webpack dist",
			"isBuildCommand": false
		}
	]
}